    background: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: var(--radius-sm);
    color: #a0a0a0;
    cursor: pointer;
    transition: all var(--duration-fast) var(--ease-out);
  }

  .copy-btn:hover {
    background: rgba(255, 255, 255, 0.2);
