    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: 0.875rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .links-list a:hover {
    color: var(--qoder-brand-green);
  }

  /* Related Section */
  .related-section {
    margin-bottom: var(--space-8);
  }

  .related-section h2 {
    font-family: var(--font-display);
    font-size: 1.25rem;
