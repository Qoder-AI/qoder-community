---
/**
 * ShowcaseCard - Showcase card component
 * Pinterest-style card with image, hover overlay showing title/description
 * Supports external links and images
 */
import type { CollectionEntry } from 'astro:content';

export interface Props {
  entry: CollectionEntry<'showcase'>;
}

const { entry } = Astro.props;
const { title, description, tags, image, link } = entry.data;

// Determine if card should be clickable
const isClickable = !!link;
const CardWrapper = isClickable ? 'a' : 'article';
---

{isClickable ? (
  <a href={link} target="_blank" rel="noopener noreferrer" class="showcase-card clickable">
    <img 
      src={image} 
      alt={title}
      loading="lazy"
      decoding="async"
    />
    
    <div class="card-overlay">
      <div class="card-content">
        <h3 class="card-title">{title}</h3>
        <p class="card-description">{description}</p>
        <div class="card-tags">
          {tags.slice(0, 3).map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
        <span class="external-link-hint">
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
            <polyline points="15 3 21 3 21 9"/>
            <line x1="10" y1="14" x2="21" y2="3"/>
          </svg>
          View Demo
        </span>
      </div>
    </div>
  </a>
) : (
  <article class="showcase-card">
    <img 
      src={image} 
      alt={title}
      loading="lazy"
      decoding="async"
    />
    
    <div class="card-overlay">
      <div class="card-content">
        <h3 class="card-title">{title}</h3>
        <p class="card-description">{description}</p>
        <div class="card-tags">
          {tags.slice(0, 3).map(tag => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
    </div>
  </article>
)}

<style>
  .showcase-card {
    position: relative;
    display: block;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: var(--background-primary);
    border: 1px solid var(--border-subtle);
    cursor: default;
    break-inside: avoid;
    margin-bottom: var(--space-4);
    text-decoration: none;
    box-shadow: var(--shadow-sm);
    transition: border-color var(--duration-normal) var(--ease-out),
                box-shadow var(--duration-normal) var(--ease-out),
                transform var(--duration-normal) var(--ease-out-expo);
  }

  .showcase-card:hover {
    border-color: var(--qoder-brand-green);
    box-shadow: var(--shadow-card-hover);
    transform: translateY(-2px);
  }

  .showcase-card.clickable {
    cursor: pointer;
  }

  .showcase-card img {
    display: block;
    width: 100%;
    height: auto;
    transition: transform var(--duration-slow) var(--ease-out),
                filter var(--duration-normal) var(--ease-out);
  }

  .showcase-card:hover img {
    transform: scale(1.03);
    filter: brightness(0.95);
  }

  .card-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.95) 0%,
      rgba(0, 0, 0, 0.85) 25%,
      rgba(0, 0, 0, 0.6) 50%,
      rgba(0, 0, 0, 0.2) 75%,
      transparent 100%
    );
    opacity: 0;
    transition: opacity var(--duration-normal) var(--ease-out);
  }

  .showcase-card:hover .card-overlay {
    opacity: 1;
  }

  .card-content {
    padding: var(--space-6);
    transform: translateY(10px);
    transition: transform var(--duration-normal) var(--ease-out-expo);
  }

  .showcase-card:hover .card-content {
    transform: translateY(0);
  }

  /* Overlay text - white for contrast against dark overlay */
  .showcase-card .card-title {
    font-family: var(--font-display);
    font-size: 1.0625rem;
    font-weight: 700;
    color: var(--text-inverse);
    margin: 0 0 var(--space-2);
    line-height: 1.3;
    letter-spacing: -0.01em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8), 0 1px 3px rgba(0, 0, 0, 0.9);
  }

  .showcase-card .card-description {
    font-size: 0.8125rem;
    color: var(--text-inverse);
    margin: 0 0 var(--space-4);
    line-height: 1.55;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-shadow: 0 1px 6px rgba(0, 0, 0, 0.8), 0 1px 2px rgba(0, 0, 0, 0.9);
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-2);
  }

  .card-tags > * {
    margin: 0 !important;
  }

  .showcase-card .tag {
    padding: 5px 12px;
    background: rgba(0, 0, 0, 0.5);
    color: var(--text-inverse);
    font-size: 0.6875rem;
    font-weight: 600;
    border-radius: var(--radius-xs);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .external-link-hint {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    margin-top: var(--space-3);
    padding: var(--space-2) var(--space-3);
    background: rgba(42, 219, 92, 0.9);
    color: var(--text-on-brand);
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: var(--radius-sm);
    width: fit-content;
    transition: background var(--duration-fast) var(--ease-out);
  }

  .showcase-card:hover .external-link-hint {
    background: var(--qoder-brand-green);
  }

  .external-link-hint svg {
    flex-shrink: 0;
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .showcase-card:hover .external-link-hint svg {
    transform: translateX(2px);
  }
</style>
