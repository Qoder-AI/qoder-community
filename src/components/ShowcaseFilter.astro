---
/**
 * ShowcaseFilter - Header component with count and contribute button
 */
export interface Props {
  count: number;
  githubContributeUrl?: string;
}

const { 
  count, 
  githubContributeUrl = 'https://github.com/Qoder-AI/qoder-community/tree/main/src/content/showcase' 
} = Astro.props;
---

<div class="showcase-actions">
  <div class="case-count">
    <span class="count-number">{count}</span>
    <span class="count-label">Use Cases</span>
  </div>
  
  <a href={githubContributeUrl} target="_blank" rel="noopener noreferrer" class="contribute-btn">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
    </svg>
    Contribute Your Case
  </a>
</div>

<style>
  .showcase-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-10);
    padding-bottom: var(--space-6);
    border-bottom: 1px solid var(--border-subtle);
  }

  .case-count {
    display: flex;
    align-items: baseline;
    gap: var(--space-2);
  }

  .count-number {
    font-family: var(--font-display);
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: -0.03em;
  }

  .count-label {
    font-size: 0.9rem;
    color: var(--text-tertiary);
    font-weight: 500;
  }

  .contribute-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    background: var(--surface-elevated);
    border: 1px solid var(--qoder-brand-green);
    border-radius: var(--radius-md);
    color: var(--qoder-brand-green);
    font-size: 0.8125rem;
    font-weight: 600;
    text-decoration: none;
    transition: all var(--duration-normal) var(--ease-out-expo);
  }

  .contribute-btn:hover {
    background: var(--qoder-brand-green);
    color: var(--text-on-brand);
    transform: translateY(-1px);
    box-shadow: var(--shadow-glow-sm);
  }

  .contribute-btn svg {
    width: 16px;
    height: 16px;
    transition: transform var(--duration-normal) var(--ease-out);
  }

  .contribute-btn:hover svg {
    transform: scale(1.1);
  }

  @media (max-width: 600px) {
    .showcase-actions {
      flex-direction: column;
      gap: var(--space-4);
      text-align: center;
    }

    .case-count {
      justify-content: center;
    }
  }
</style>
